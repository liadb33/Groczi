{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["./backend", "./parser"],
}